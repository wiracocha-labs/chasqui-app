# Example environment variables for Hardhat configuration
# Copy this file to .env and fill in your actual values

# Private key for deployment (without 0x prefix)
# ⚠️ NUNCA COMMITEES TU PRIVATE KEY REAL
PRIVATE_KEY=your_private_key_here

# Avalanche Network URLs
AVALANCHE_MAINNET_URL=https://api.avax.network/ext/bc/C/rpc
AVALANCHE_FUJI_URL=https://api.avax-test.network/ext/bc/C/rpc

# Ethereum Networks (if needed)
SEPOLIA_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key
MAINNET_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key

# API keys for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here
SNOWTRACE_API_KEY=your_snowtrace_api_key_here

# Set to true to enable gas reporting
REPORT_GAS=false

# Frontend Configuration
# Network to use: localhost, fuji, avalanche
VITE_NETWORK=localhost

# Debug configuration - Single flag controls all logging
VITE_DEBUG=false

# Contract addresses for localhost (auto-generated by deploy scripts)
VITE_LOCALHOST_AUTH_CONTRACT=0x5FbDB2315678afecb367f032d93F642f64180aa3
VITE_LOCALHOST_EERC20_CONTRACT=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512
VITE_LOCALHOST_REGISTRAR_CONTRACT=0x9fE46736679d2D9a65F0992F2272dE9f3c7fa6e0

# Contract addresses for Fuji testnet (fill when deployed)
VITE_FUJI_AUTH_CONTRACT=
VITE_FUJI_EERC20_CONTRACT=
VITE_FUJI_REGISTRAR_CONTRACT=

# Contract addresses for Avalanche mainnet (fill when deployed)
VITE_AVALANCHE_AUTH_CONTRACT=
VITE_AVALANCHE_EERC20_CONTRACT=
VITE_AVALANCHE_REGISTRAR_CONTRACT=
